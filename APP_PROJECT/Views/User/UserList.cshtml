@{
    ViewData["Title"] = "신청자목록";
}

<h1>신청자 목록</h1>

<table border="1" cellpadding="10" style="border-collapse: collapse;">
    <thead>
        <tr>
            <th>순번</th>
            <th>회사명</th>
            <th>직급</th>
            <th>이름</th>
            <th>연령</th>
            <th>명령</th>
            <th><a asp-action="NewUser" class="btn btn-primary">추가</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.CpyName</td>
                <td>@user.Position</td>
                @* <td>@user.Username</td> *@
                <td>
                    <a asp-action="UserDetail" asp-route-id="@user.Id">@user.Username</a>
                </td>
                <td>@user.Age</td>
                <td colspan="2">
                    <a asp-action="NewUser" asp-route-id="@user.Id">[수정]</a> |
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" onclick="return confirm('정말 삭제하시겠습니까');">[삭제]</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>